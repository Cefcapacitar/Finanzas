#Capitalización compuesta

tna = float(input('ingresa una tasa nominal de interés: '))
capitalizacion = float(input('ingresa la cantidad de períodos que capitaliza en el año: '))
te = tna/capitalizacion
print('Tasa efectiva: ', te)
capital = float(input('ingrese el capital incial de la operación: '))
plazo = int(input('ingrese la cantidad de períodos de la operación: '))
monto = capital*((1+te)**plazo)
print(f'el monto final compuesto es: {monto:12.2f}')

#Descuento compuesto

tipo=input('ingrese el tipo de tasa que dispone, d para descuento, i para interés: ')
monto=float(input('ingrese el capital nominal o final: '))
descuento=float(input('ingrese la cantidad de períodos que la TNA descuenta en el año: '))
plazo=int(input('ingrese la cantidad de períodos de la operación: '))
if tipo=='d':
  tna=float(input('ingrese la tasa nominal de descuento: '))
  te=tna/descuento
  capital=monto*((1-te)**plazo) 
else:
  tna=float(input('ingrese la tasa nominal de interés: '))
  te = tna/descuento
  capital=monto/((1+te)**plazo)
print(f'el capital calculado es: {capital:12.2f}')
